@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminModelo2.cshtml";
}

@section Breadcumb {

    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Sobre</a>
        </li>
        <li class="active">Sobre</li>
    </ul>

}

@section PageHeader {
    <h1 style="color: green;">
        Estado
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            cadastro de estados
        </small>
    </h1>

}

<!--PAINEL DE BUSCA ESTADOS-->

<div class="widget-box">
    <div class="widget-header">
        <h4 class="widget-title">Estados</h4>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            <form>
                <!-- <legend>Form</legend> -->
                <fieldset>

                    <div class="row">
                        <div class="col-sm-2"></div>
                        <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: right;">Nome:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="nomePesquisa" id="nomePesquisa" placeholder="Nome" maxlength="22" />
                        </div>

                        <div class="col-sm-4"></div>
                    </div>

                    <div class="row">
                        <div class="col-sm-2"></div>
                        <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: right;"></label>

                        <div class="col-sm-4">
                            <span class="help-block" style="color: red;"> </span>
                        </div>

                        <div class="col-sm-4"></div>
                    </div>


                    <div class="row">
                        <div class="col-sm-2"></div>

                        <label for="inputPassword3" class="col-sm-2 control-label" style="text-align: right;">Sigla:</label>

                        <div class="col-sm-2">
                            <input type="text" class="form-control" name="siglaPesquisa" id="siglaPesquisa" placeholder="Sigla" maxlength="2" style="min-width: 60px; max-width: 60px;" />
                        </div>

                        <div class="col-sm-6"></div>
                    </div>

                    <div class="row">
                        <div class="col-sm-2"></div>
                        <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: right;"></label>

                        <div class="col-sm-4">
                            <span class="help-block" style="color: red;"> </span>
                        </div>

                        <div class="col-sm-4"></div>
                    </div>

                </fieldset>

                <div class="form-actions center">
                    <button type="button" class="btn btn-sm btn-success">
                        <i class="ace-icon glyphicon glyphicon-floppy-disk"></i>
                        Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- FIM PAINEL DE BUSCA ESTADOS -->

<br /><br />


<!-- PANEL DE RESULTADO DE BUSCA -->
<div class="widget-box">
    <div class="widget-header">
        <h4 class="widget-title">Resultados da busca</h4>
    </div>

    <div class="widget-body">


        <div class="widget-main no-padding">

            <form>

                <fieldset>

                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modalColunasEstado" id="botao"><i class="glyphicon glyphicon-list"></i> Escolher Colunas</button>
                    <br /><br />
                    <table id="tblEstados" class="table table-bordered">
                        <thead style="background: #3385ff; color: white;">
                            <tr>
                                <th>Nome</th>
                                <th>Sigla</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody id="corpoTabela">

                            <tr>
                                <td>Nome</td>
                                <td>SP</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-success" data-target="#modalEstado"  data-toggle="modal">
                                        <i class="ace-icon glyphicon glyphicon-pencil"></i>
                                    </button>
                                </td>
                            </tr>

                        </tbody>
                    </table>


                </fieldset>

            </form>

        </div>

    </div>
</div>

<!-- FIM DE PANEL DE RESULTADO DE BUSCA -->
<!--
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modalEstado">Abrir</button>
-->
<!-- MODAL DO FORMULÁRIO DE EDIÇÃO/INSERÇÃO -->

<div id="modalEstado" class="modal fade" role="dialog">

    <div class="modal-dialog modal-lg">
        <form method="post" action="">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times</button>
                    <h4>Estado</h4>
                </div>
                <div class="modal-body">

                    <input type="hidden" value="0" id="idEstado" name="idEstado" />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: right;">Nome:</label>

                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="nomePesquisa" id="nomePesquisa" placeholder="Nome" maxlength="22" />
                            </div>

                            <div class="col-sm-4"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: right;"></label>

                            <div class="col-sm-4">
                                <span class="help-block" style="color:red;"></span>
                            </div>

                            <div class="col-sm-4"></div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"></div>

                            <label for="inputPassword3" class="col-sm-2 control-label" style="text-align: right;">Sigla:</label>

                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="siglaPesquisa" id="siglaPesquisa" placeholder="Sigla" maxlength="2" style="min-width: 60px; max-width: 60px;" />
                            </div>

                            <div class="col-sm-6"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"></div>

                            <label for="inputPassword3" class="col-sm-2 control-label" style="text-align: right;"></label>

                            <div class="col-sm-2">
                                <span class="help-block" style="color: red;"></span>
                            </div>

                            <div class="col-sm-6"></div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar">Salvar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnCancelar">Cancelar</button>
                </div>

            </div>
        </form>
    </div>

</div>

<!-- FIM DO MODAL DE EDIÇÃO E INSERÇÃO -->
